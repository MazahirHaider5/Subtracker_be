{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./src/@types", "./src/firebase",]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.json"]
}
